<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaApp.Pages.MakingOrderPage">
  <StackLayout>
    <ActivityIndicator x:Name="activityIndicator" IsRunning="False" IsVisible="False"/>
    <Label x:Name="labelTotalPrice" Style ="{DynamicResource TitleStyle}"/>
    <Label Text="Адрес:" Style ="{DynamicResource SubtitleStyle}"/>
    <Picker x:Name="pickerDeliveryAddress" Title="Выберите адрес доставки" />
    <Button x:Name="buttonSubmit" Text="Подтвердить заказ"/>
  </StackLayout>
</ContentPage>