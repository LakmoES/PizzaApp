<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaApp.Pages.AccountEditPage">
  <ScrollView>
    <StackLayout>
      <ActivityIndicator x:Name="activityIndicator" IsRunning="False" IsVisible="False" />
      <Entry x:Name="entryUsername" Placeholder = "Имя пользователя" IsEnabled="False"/>
      <Entry x:Name="entryPassword" Placeholder = "Пароль" IsPassword="True" Text=""/>
      <Entry x:Name="entryEmail" Placeholder = "Email" Keyboard="Keyboard.Email" />
      <Entry x:Name="entryName" Placeholder = "Ваше имя" />
      <Entry x:Name="entrySurname" Placeholder = "Фамилия"/>
      <Button x:Name="buttonSubmit" Text="Подтвердить"/>
      
      <Button x:Name="buttonTelEdit" Text="Номера телефонов" />
      <Button x:Name="buttonAddressEdit" Text="Адреса доставки" />
    </StackLayout>
  </ScrollView>
</ContentPage>