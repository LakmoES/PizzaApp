<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PizzaApp.Pages.RegistrationPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <StackLayout Padding="10,5,10,0">
            <ActivityIndicator x:Name="activityIndicator"
                               IsRunning="False"
                               IsVisible="False" />
            <Entry x:Name="entryUsername" Placeholder="Имя пользователя" />
            <Entry x:Name="entryPassword"
                   IsPassword="True"
                   Placeholder="Пароль" />
            <Entry x:Name="entryEmail"
                   Keyboard="Keyboard.Email"
                   Placeholder="Email" />
            <Entry x:Name="entryName" Placeholder="Ваше имя" />
            <Entry x:Name="entrySurname" Placeholder="Фамилия" />
            <Button x:Name="buttonSubmit" Text="Подтвердить" />
        </StackLayout>
    </ScrollView>
</ContentPage>